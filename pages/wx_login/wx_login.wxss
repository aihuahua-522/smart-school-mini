/* subpkg/pages/wx_login/wx_login.wxss */

.login{

  display: flex;
  flex-direction: column; 
  align-items: center;
  width: 100vw !important;
  height: 100vh !important;
  background-color: #f5f5f5;
  position: relative;
  
}

.login-main-color{
 
  display: flex;
  width: 100vw;
  height: 200px;
  background-color: #ffbb01;
  border-radius:0px 0px 20px 20px

}

.login-title{
    display: flex;
    align-items: center;
    width: 100vw;
    margin-top: 50px;
    margin-left: 30px;
    height: 50px;
    color: #444444;
    font-size: 24px;
    font-weight: 500;
}

.login-con{

  position: absolute;
 top: 125px;
 left: 20px;
 width: calc(100vw - 40px);
 height: 400px;
 background-color: white;
  border-radius: 20px;
}

.login-sub-title{

  display: flex;
  margin-left: 30px;
  margin-top: 20px;
  align-items: center;
  justify-content: center;
  height: 40px;
  text-align: center;
  font-size: 20px;
  font-weight: 400;
  color: #444444;
  width: 50px;
  /* background-color: red; */
  border-bottom: 4px solid #ffbb01;

}

.login-use-name{
  display: flex;
  margin-left: 20px;
  height: 50px;
  align-items: center;
  width: calc(100vw - 80px);
  /* background-color: red; */
  margin-top: 20px;
  color: #666666;
  font-size: 17px;
  font-weight: 500;
  border-bottom: 1px solid #e4e4e4;

}

.login-imput-back{
  display: flex;
  margin-left: 10px;
  height: 50px;
  flex: 1;
  align-items: center;
  /* background-color: red; */
  color: #333333;
  font-size: 15px;
  font-weight: 400;
}

.login-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  margin-left: 40px;
  margin-right: 40px;
  margin-top: 60px;
  height: 50px;
  border-radius: 25px;
  background-color: #ffbb01;
  color: white;
  font-size: 18px;
  font-weight: 500;
}