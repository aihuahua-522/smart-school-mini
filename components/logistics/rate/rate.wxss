.main{
  background-color: #fff;
  border-radius: 20rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.demo-rate {
    background-color: #fff;
    width: 100%;
    height: 96rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0 32rpx;
    border-bottom: solid 1rpx #f0f0f0;
    border-top: solid 1rpx #f0f0f0;
    margin-top: 32rpx;
    margin-bottom: 32rpx;
  }
  
  .demo-rate__title {
    width: 200rpx;
  }
  
  .demo-rate__transparent {
    background-color: transparent;
    padding-left: 32rpx;
    border: 0;
  }
.txt{
  margin-left: 15px;
}
.qusetion{
    margin-left: 20px;
    padding-top: 20px;
}
.theme-card {
    border-radius: 24rpx;
    margin: 32rpx;
    overflow: hidden;
  }

.score{
    font-size: 20rpx;
    color:#625b57;
}
.select{
    text-align: center;
    background-color: #ffbc2d;
    color: #fff;
    font-size: 13px;
    border-radius: 20rpx;
    padding: 2rpx 14rpx;
    margin-right: 6rpx;
}

