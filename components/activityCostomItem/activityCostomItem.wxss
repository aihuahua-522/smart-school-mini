/* components/activityCostomItem/activityCostomItem.wxss */

.dorm_name {
  font-size: 34rpx;
}
.building {
  font-size: 30rpx;
}

.detail .item {
  border-bottom: 1px solid #e7e7e7;
  padding: 18rpx 30rpx;
  display: flex;
  margin: 18rpx;
}
.item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.info {
  flex: 1;
  margin-left: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title {
  flex: 1;
}
.name {
  font-size: 32rpx;
}

.card_shadow {
  border: 0 solid #f5f5f5;
  box-shadow: 0 4rpx 20rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
}
.activity_title {
  font-size: 36rpx;
  font-weight: bold;
}
.font-sm {
  font-size: 10pt;
}
.activity_title .tip {
  float: left;
  margin-top: 10rpx;
  margin-right: 8rpx;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx;
  background-color: #ff610b;
  border-radius: 2px;
  font-weight: 500;
}
