.page {
  height: 100vh;
}
.page t-tabs {
  flex: 1;
}
.tribal_container {
  margin: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  box-shadow: 0 0 10rpx spread rgba(0, 0, 0, 0.2);
}
.tribal_container .tribal_info {
  flex: 1;
}
.tribal_container .tribal_info .tribal_info_top {
  display: flex;
  justify-content: space-between;
}
.tribal_container .tribal_info .tribal_info_top .tribal_info_top_content {
  display: flex;
  flex-direction: column;
}
.tribal_container .tribal_info .tribal_info_top .tribal_info_top_content .team_name {
  font-style: initial;
}
.tribal_container .tribal_info .tribal_info_bottom {
  color: #201b1b;
  text-overflow: ellipsis;
  z-index: -1;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
