/* pages/forum/good/good.wxss */
.container {
  width: 100%;
  padding: 10rpx 20rpx;
}
/* 内容 */
.good-item {
  width: 100%;
  padding:  20rpx 0 30rpx;
  border-bottom: 6rpx solid #e4e4e4;
  display: flex;
  position: relative;
}

.personal-box {
  display: flex;
  align-items: center;
}

.headportrait {
  margin: 10rpx;
  height: 80rpx;
  width: 80rpx;
}

.human {
  display: flex;
  height: 90rpx;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  font-size: 28rpx;
  font-weight: 600;
}
.signature {
  font-size: 26rpx;
}

/* 关注 */
.concern {
  position: absolute;
  top: 50rpx;
  right: 0;
  font-size: 28rpx;
  height: 50rpx;
  width: 120rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 40rpx;
  background-color: #FFCC33;
}


