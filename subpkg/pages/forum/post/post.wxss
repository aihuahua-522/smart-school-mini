/* pages/forum/post/post.wxss */
.container{
  width: 100%;
}
.top-box{
  width: 100%;
  margin: 10rpx;
  padding-bottom:10rpx ;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #999999;
}
.topic-name{
  width: 68%;
  line-height: 70rpx;
  padding-left: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.change-topic{
  font-size: 30rpx;
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #eeeeee;
  border-radius: 8rpx;
}
t-drawer{
  z-index: 99999;
}

t-textarea {
  width: 100%;
}

button {
  position: fixed;
  bottom: 120rpx;
  width: 60%;
  height: 90rpx;
  border-radius: 45rpx;
  color: #ffffff;
  background-color: #f0ca58;
}

.chooseImg {
  width: 90%;
  padding: 20rpx;
  /* padding: 30rpx 50rpx 70rpx; */
}

.img-tit {
  font-weight: 400;
  font-size: 28rpx;
  color: #495258;
  margin: 0 0 24rpx 6rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.imgs {
  display: flex;
  flex-wrap: wrap;
}

.add-img {
  width: 110rpx;
  height: 110rpx;
  margin: 10rpx 25rpx 10rpx 0;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  /* border: 1rpx solid #3a3a3a; */
}

.img {
  position: relative;
}

.removeicon {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #eeeeee;
  text-align: center;
  line-height: 36rpx;
  color: #495258;
  font-size: 26rpx;
  z-index: 2;
  top: -20rpx;
  right: -20rpx;
}